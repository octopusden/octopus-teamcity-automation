<?xml version="1.0" encoding="UTF-8"?>
<meta-runner name="${description}">
    <description>Run ${name}</description>
    <settings>
        <parameters>
            <param name="ARGS" value="--help" spec="text description='${name} arguments.' validationMode='not_empty' display='normal'"/>
        </parameters>
        <build-runners>
            <runner name="${name}" type="kotlinScript">
                <parameters>
                    <param name="kotlinArgs" value="%ARGS%" />
                    <param name="kotlinPath" value="%teamcity.tool.kotlin.compiler.1.9.20%" />
                    <param name="scriptContent">
                        <![CDATA[@file:DependsOn(${metaRunnerScriptDependencies}"${group}:${name}:${version}") ${group}.main(args)]]></param>
                    <param name="jvmArgs" value="-Duser.home=." />
                    <param name="scriptType" value="customScript" />
                    <param name="teamcity.step.mode" value="default" />
                </parameters>
            </runner>
        </build-runners>
        <requirements />
    </settings>
</meta-runner>